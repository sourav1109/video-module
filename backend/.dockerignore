node_modules
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment files (use Railway environment variables instead)
.env
.env.*
!.env.example

# Git
.git
.gitignore
.gitattributes

# IDE
.vscode
.idea
*.swp
*.swo
*~
.DS_Store

# Testing
coverage
.nyc_output
*.test.js
*.spec.js
__tests__
__mocks__

# Documentation
README.md
*.md
!package.json

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
.pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Temporary files
tmp
temp
.tmp
.temp

# Build artifacts
dist
build

# Uploads (if you want to exclude user uploads, comment this out)
# uploads/*
# !uploads/.gitkeep

# Database
*.sqlite
*.sqlite3
*.db

# OS files
.DS_Store
Thumbs.db

# Docker
Dockerfile*
docker-compose*
.dockerignore
